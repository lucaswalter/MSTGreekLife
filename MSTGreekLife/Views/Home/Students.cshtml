@model IEnumerable<IGrouping<int, MSTGreekLife.Models.StudentModel>>

<h2>Students</h2>


@foreach (IEnumerable<MSTGreekLife.Models.StudentModel> element in Model)
{

    <h3>@element.First().GreekHouse.HouseName (@element.First().GreekHouse.HouseLetters)</h3>

    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Student ID
            </th>
        </tr>


        @foreach (var student in element)
        {
            <tr>
                <td>
                    @student.Name.FirstName
                </td>
                <td>
                    @student.Name.LastName
                </td>
                <td>
                    @student.Age
                </td>
                <td>
                    @student.StudentID
                </td>
            </tr>
        }

    </table>
}
