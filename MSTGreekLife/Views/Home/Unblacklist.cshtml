@model MSTGreekLife.Models.BlacklistModel

<h3>Are you sure you want to unblacklist this student?</h3>

<div>

    <h4>@Model.Student.Name.FirstName @Model.Student.Name.LastName</h4>

    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Reason)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reason)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Unblacklist" class="btn btn-default"/> |
            @Html.ActionLink("Back to List", "Blacklist")
        </div>
    }
</div>
